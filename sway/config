output * bg ~/Pictures/wallpapers/wp.jpg fill

##########
# Inputs #
##########

input type:keyboard {
	xkb_layout us,ru
	xkb_options grp:alt_shift_toggle,caps:ctrl_modifier
}

input type:touchpad {
	natural_scroll enabled
	tap enabled
}

input 9580:109:HUION_Huion_Tablet_Pen map_to_output HDMI-A-1

###############
# Screenshots #
###############

bindsym --to-code $mod+Shift+A exec grim -g "$(slurp)" - | wl-copy

bindsym --locked {
  # Brightness control
  XF86MonBrightnessUp exec brightnessctl set +5%
  XF86MonBrightnessDown exec brightnessctl set 5%-

  # Sound Control
  XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
  XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
  XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
}

include /etc/sway/config.d/*
